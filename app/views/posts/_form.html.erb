<%= form_for @post, :html => {:class => 'form-signin', :role => "form"} do |f| %>
<h2 class="form-signin-heading">Fill in form please</h2>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <% @post.errors.full_messages.each do |message| %>
          <div class="alert alert-danger" role="alert">
            <%= message %>
          </div>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, :class => 'form-control', :placeholder => 'Title' %>
  </div>
  <div class="field">
    <%= f.text_area :body, :class => 'form-control', :placeholder => 'Body' %>
  </div>
  <div class="field">
    <%= f.text_field :tags, :class => 'form-control', :placeholder => 'Tags' %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>
