<div class="alert alert-warning" role="alert">
    <%= notice %>
</div>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @post.tags %>
</p>


<ul class="list-inline">
    <li>
      <%= link_to 'Edit',
                    edit_post_path(@post),
                    :class => 'white-color btn btn-warning btn-sm',
                    :role => 'button'
      %>
    </li>
    <li>
      <%= link_to 'Back',
                    posts_path,
                    :class => 'white-color btn btn-success btn-sm',
                    :role => 'button'
      %>
    </li>
</ul>

